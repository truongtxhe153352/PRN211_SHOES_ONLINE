@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using Project_PRN211_TEAM7.Models
@model List<Brand>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>JSP Page</title>  
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link href="~/css/manager.css" rel="stylesheet" type="text/css"/>
        <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
        <!-- Css Styles -->
        <style>
            table td{
                padding-right: 10px; 
                padding-bottom: 10px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6">
                            <a asp-controller="Admin" asp-action="ProductManage"><h2 style="color: white">Manage <b>Product</b></h2></a>
                        </div>
                    </div>
                </div>
            @if (@ViewBag != null)
            {
                <h3 style="color: red">@ViewBag.Mess</h3>
            }
            <div class="modal-body">

                    <form asp-controller="Admin" asp-action="AddProduct" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input name="name" type="text" class="form-control" value="@ViewBag.name" required>
                    </div>
                    <div class="form-group">
                        <label>Brand</label>
                        <select name="brand">
                            @foreach(var item in @ViewBag.listbrand){
                                @if (@item.BrandId == @ViewBag.brand)
                                {
                                    <option value="@item.BrandId" selected>@item.BrandName</option>
                                    
                                }else{<option value="@item.BrandId" >@item.BrandName</option>}
                            }
                        </select>
                    </div>
                     <div class="form-group">
                        <label>Image</label>
                        <input name="image" type="file"  class="form-control" value="@ViewBag.image" required>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input name="price" type="text"  class="form-control" value="@ViewBag.price"required>
                    </div>
                     <div class="form-group">
                        <label>Discount</label>
                        <input name="discount" type="text"  class="form-control" value="@ViewBag.discount" required>
                    </div>
                     <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" class="form-control" required>@ViewBag.description</textarea>
                    </div>
                    <div class="form-group">
                        <label>Size</label>
                        <input name="size" class="form-control" value="@ViewBag.size" required>
                    </div>
                    <div class="form-group">
                        <label>Quantity</label>
                        <input name="quantity" class="form-control" value="@ViewBag.quantity"  required>
                    </div>
                        <div class="modal-footer" style="margin-top: 30px">
                            <a asp-controller="Admin" asp-action="ProductManage"><button type="button" class="btn btn-primary">Back to List</button></a>
                            <input type="submit"  class="btn btn-success" value="SAVE">
                        </div>
                    </form>
                </div>
            </div>
        </div>



        <script src="js/manager.js" type="text/javascript"></script>
    </body>
</html>
